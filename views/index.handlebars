<div class="container">
    <div class="jumbotron">
        <div class="row">
            <div class="col-md-12">
                <img src="./assets/images/burgerArt_small.png" id="image">
                <h1> Eat-Da-Burger! </h1>
            </div>
        </div>
    </div>

    {{!-- burger list before being eaten --}}
    <div class="row">
        <div class="col-md-6">
            {{#each burgers}}
                {{#unless this.devoured}}
                    <div class="input-group">
                        <p class="lead"> {{this.burger_name}} </p>
                            <span class="input-group-btn">
								<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
									<input type="hidden" name="devoured" value="true">
									<button class="btn btn-default btn-lg" type="submit"> EAT IT! </button>
								</form>
							</span>
                    </div>
                {{/unless}}
            {{/each}}
        </div>
    </div>


    {{!-- burger list after being eaten --}}
    <div class="row">
        <div class="col-md-6">
            {{#each burgers}}
                {{#if this.devoured}}
                    <p class="lead">{{this.burger_name}} </p>
                {{/if}}
            {{/each}}
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <p class="lead"> Enter the name of the burger you want to eat, then click the submit button. </p>

            {{!-- section to add burgers --}}
            <form class="create-update-form" action="burgers/create" method="POST">
                <div class="form-group">
                    <textarea class="form-control input-lg" type="text" name="b_name" rows="3"> </textarea>
                </div>
                <div id="addBurger"><button class="btn btn-default btn-lg" type="submit">Add Burger!</button>
                </div>
            </form>
        </div>
    </div>
</div>
